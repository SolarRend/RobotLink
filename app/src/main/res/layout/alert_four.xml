<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/alert_four_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Hello, I am bender."
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/alert_four_img"
        android:layout_alignStart="@+id/alert_four_button1"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/alert_four_button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/alert_four_button2"
        android:layout_alignBottom="@+id/alert_four_button2"
        android:layout_toStartOf="@+id/alert_four_button2" />

    <Button
        android:id="@+id/alert_four_button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:textAllCaps="false"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/alert_four_img"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/alert_four_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/svg_ok"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/alert_four_button2" />

    <Button
        android:id="@+id/alert_four_button4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:textAllCaps="false"
        android:layout_below="@+id/alert_four_img"
        android:layout_toEndOf="@+id/alert_four_button1"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/alert_four_button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/alert_four_button4"
        android:layout_alignBottom="@+id/alert_four_button4"
        android:layout_alignStart="@+id/alert_four_button1" />

    <Button
        android:id="@+id/alert_four_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:textAllCaps="false"
        android:layout_below="@+id/alert_four_button1"
        android:layout_toEndOf="@+id/alert_four_later"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/alert_four_later"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Later"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/alert_four_info"
        android:layout_alignBottom="@+id/alert_four_info"
        android:layout_alignStart="@+id/alert_four_button3" />

</RelativeLayout>